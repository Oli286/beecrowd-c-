/*Write a program that reads an employee's number, his/her worked
hours number in a month and the amount he received per hour.
Print the employee's number and salary that he/she will receive
at end of the month, with two decimal places*/

#include <stdio.h>

int main() {
    int employee_number, worked_hours;
    double hourly_rate, salary;


    scanf("%d %d %lf", &employee_number, &worked_hours, &hourly_rate );


    salary = worked_hours * hourly_rate;


    printf("NUMBER = %d\n", employee_number);
    printf("SALARY = U$ %.2lf\n", salary);

    return 0;
}
